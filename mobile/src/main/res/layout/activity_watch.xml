<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipi.mywearapp.WatchActivity">

    <TextView
        android:id="@+id/textViewWatchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_view_watch_title"
        android:textAppearance="@style/ActivityTitleFont" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider"
        android:elevation="0dp" />

    <TextView
        android:id="@+id/tvAcceleration"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/text_view_swing_strength"
        android:textAppearance="@style/MyTextViewFont" />

    <TextView
        android:id="@+id/tvAccValue"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/text_view_swing_strength_default_value"
        android:textAlignment="center"
        android:textAppearance="@style/MyTextViewFont" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvGyroscope"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/text_view_swing_angle"
        android:textAppearance="@style/MyTextViewFont" />

    <TextView
        android:id="@+id/tvAngleValue"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/text_view_swing_angle_default_value"
        android:textAlignment="center"
        android:textAppearance="@style/MyTextViewFont" />

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/text_view_swing_duration"
        android:textAlignment="center"
        android:textAppearance="@style/MyTextViewFont" />

    <TextView
        android:id="@+id/tvDurationValue"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/text_view_swing_duration_default_value"
        android:textAlignment="center"
        android:textAppearance="@style/MyTextViewFont" />
</LinearLayout>
